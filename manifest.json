{
  "manifest_version": 2,
  "name": "Responsive Bugzilla",
  "version": "1.0.3",

  "content_scripts": [
    {
      "matches": ["https://bugzilla.mozilla.org/*"],
      "css": ["all.css"]
    },
    {
      "matches": ["https://bugzilla.mozilla.org/show_bug*"],
      "js": ["show_bug.js"],
      "css": ["show_bug.css"]
    }
  ]
}
